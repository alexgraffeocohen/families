<%= form_for [@family, @album] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, prompt: "My Album" %>

  <%= f.label :date %>
  <%= f.date_select :date, :start_year => 2000, :end_year => Time.now.year, :discard_day => true %><br><br>

  <%= label_tag 'permissions[]', 'Who can view my album?' %><br>
  <%= link_to "Entire Family", "#" %><br>
  Siblings <%= check_box_tag('permissions[]', value = "1", checked = false) %><br>
  Parents <%= check_box_tag('permissions[]', value = "2", checked = false) %><br>
  Grandparents <%= check_box_tag('permissions[]', value = "3", checked = false) %><br>
  Children <%= check_box_tag('permissions[]', value = "4", checked = false) %><br>
  Daughter and Son In-Laws <%= check_box_tag('permissions[]', value = "5", checked = false) %><br><br>

  <%= f.submit %>
<% end %>