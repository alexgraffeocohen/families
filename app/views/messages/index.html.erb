<h4>Current Conversation:</h4>
<h2 data-id="<%= @conversation.id %>"><%= @conversation.title %> - (<%= @conversation.all_permitted_members %>)</h2>
<%= form_for [@family, @conversation, @message], remote: true do |f| %>
  <%= f.label :content, "Write a new message" %><br>
  <%= f.text_area :content, required: true %><br><br>

  <%= f.submit %>
<% end %>
<br>
<%= button_to "Back to All Conversations", family_conversations_path %>
<div class="message_all">
  <% if @conversation.messages.length == 0 %>
    <div class="white_div" >You have 0 messages.</div>
  <% else %>
      <% @conversation.messages.reverse.each do |message| %>
        <%= render "show_message", {family: @family, conversation: @conversation, message: message} %>
      <% end %>
  <% end %>
</div>

