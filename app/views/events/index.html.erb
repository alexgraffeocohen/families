<h1>Events</h1>
<div id="events">
  <%= calendar do |date| %>
    <%= date.day %>
    <% formatted_date = Time.zone.parse(date.to_s).utc %>
    <% if @events_by_date[formatted_date] %>
    <ul>
      <% @events_by_date[formatted_date].each do |event| %>
        <li><%= link_to event.name, event_path(current_person, event) %></li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
</div>

<h2>Create a New Event!</h2>
<%= form_for([@person, @event], class:"form-horizontal") do |f| %>
  <div class="control-group">
    <%= f.label :name, class:"control-label" %>
    <div class="controls">
      <%= f.text_field :name %><br>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :content, class:"control-label" %>
    <div class="controls">
      <%= f.text_field :content %><br>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_date, class:"control-label" %>
    <div class="controls">
      <%= f.text_field :start_date %> <br> 
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, class:"control-label" %>
    <div class="controls">
      <%= f.text_field :end_date %><br>
    </div>
  </div>
  <%= render 'layouts/permission_form', f: f %>
  <%= f.submit %>
  <br>
<% end %>
