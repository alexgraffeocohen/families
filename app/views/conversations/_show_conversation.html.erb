<div class="convo" data-id="<%= convo.id %>">
  <h3>
    <%= link_to convo.title, family_conversation_messages_index_path(@family, convo) %>
  </h3>
  <% if convo.messages.blank? %>
    <p>No Messages Yet :( </p>
  <% else %>
    <p><%= convo.last_contributor %>: <%= convo.last_message %></p>
  <% end %>
</div>