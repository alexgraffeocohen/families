<div class="panel panel-default inline form_attr">
  <div class="panel-heading">
    <h4 class="center">Create a New Event!</h4>
  </div>
  <div class="panel-body form_attr">
    <%= form_for([@family, @event], class:"form-horizontal", remote: true) do |f| %>
      <div class="control-group">
        <%= f.label :name, class:"control-label" %>
        <div class="controls">
          <%= f.text_field :name %><br><br>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :description, "Description", class:"control-label" %>
        <div class="controls">
          <%= f.text_area :description %><br><br>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :start_date, class:"control-label" %>
        <div class="controls">
          <%= f.text_field :start_date %><br><br>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :end_date, class:"control-label" %>
        <div class="controls">
          <%= f.text_field :end_date %><br><br>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag "start_time", "Start Time", class:"control-label" %>
        <div class="controls">
          <%= time_field_tag "start_time", "Start Time" %><br><br> 
        </div>
      </div>
      <div class="control-group">
        <%= label_tag "end_time", "End Time", class:"control-label" %>
        <div class="controls">
          <%= time_field_tag "end_time", "End Time" %>
        </div>
      </div>
      <hr>
      <div class="center">
        <%= f.submit %>
        <br><br>
        <%= link_to "Back to All Events", family_events_path(@family) %>
      </div>
    </div>
    <div class="form_attr">
      <br>
      <p>Who can see this event?</p>
      <%= render 'layouts/permission_form', f: f, current_resource: "event" %>
    </div> 
    <% end %>
  </div>
</div>





