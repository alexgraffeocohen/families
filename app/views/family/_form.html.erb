<div class="panel panel-default inline form_attr">
  <div class="panel-heading">
    <h4 class="center">Add Family Members</h4>
  <div class="panel-body">
    <%= form_for(@family) do |f| %>
    <div class="control-group">
      <%= f.label :name %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

      <div id="member_inputs">
        <%= render "member_input" %><br>
      </div>

      <%= link_to("Add Member", add_member_path, remote: true) %><br><br>
      <hr>
      <%= f.submit %>
    <% end %>
  </div>
</div>
