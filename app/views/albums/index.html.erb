<div class="row">
<% if @albums.empty? %>
<div class="white_div" >You have 0 albums.</div>
<% else %>
  <% @albums.each do |album| %>
    <% if current_person.can_see_album?(album) %>
      <div class="white_div" data-id= "<%= album.id %>">
        <h2><%= album.name %></h2>
        <p>Photos: <%=album.photos.count%></p>
        <%= album.created_at.strftime("%b %Y") %>
        <br><br>
        <%= link_to "âœ–", destroy_album_path(album.family, album), remote: true, method: :delete %>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>
<div class="row text-center">
<%= link_to "Create an album!", new_album_path %>
</div>


