<h1>Events</h1>
<% @events.each do |event| %>
  <h3><%= event.name %></h3>
  <p><%= event.content %></p>
  <p><%= event.start_date %></p>
  <p><%= event.end_date %></p>
<% end %>

<h2>Create a New Event!</h2>
<%= form_for([@person, @event]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :content %>
  <%= f.text_field :content %><br>

  <%= f.label :start_date %>
  <%= f.text_field :start_date %> <br> 

  <%= f.label :end_date %>
  <%= f.text_field :end_date %><br>

  <%= f.submit %>
<% end %>
